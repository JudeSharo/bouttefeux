{% extends 'base.html.twig' %}

{% block title %} Administration {% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin.css') }}"/>
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="belowNavbar">
		<h1>
			Liste des utilisateurs
		</h1>
		<table>
			{% for user in users %}
				<tr>
					<td><p>{{user.id}}</p></td>
					<td><p>{{user.pseudo}}</p></td>					
					<td><p>{{user.nom}}</p></td>
					<td><p>{{user.adresse}}</p></td>
					<td><p>{{user.getPhoneNumber()}}</p></td>
					<td><p>{{user.email}}</p></td>
					<td>{{include('admin/_delete_form.html.twig',{'button:label':'Supprimer l\'utilisateur'})}}</td>
				</tr>	
			{% endfor %}	
		</table>		
	</div>
{% endblock %}
